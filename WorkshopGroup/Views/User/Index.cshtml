@using WorkshopGroup.ViewModels
@model List<UserViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <img alt="Image profile avatar" src="@user.ProfileImageUrl" class="avatar">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.UserName</span>
                                        </div>
                                        <p class="card-text">Mileage: @user.Mileage</p>
                                        <p class="card-text">Points: @user.Points</p>
                                    </div>
                                </th>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                                        View Profile
                                    </a>
                               

                                @{
                                    var mileage = user.Mileage == null ? "?" : user.Mileage.ToString();
                                    var points = user.Points == null ? "?" : user.Mileage.ToString();
                                }
                                <td>@mileage mile at @points Pph</td>
                                <td><i class="icon-location"></i> @user.Location</td>
                              </td>
                              @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                              {
                                  <td>
                                      <a  asp-controller="Club" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm">Edit</a>
                                      <a  asp-controller="Club" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm">Delete</a>
                                  </td>
                              })
                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
